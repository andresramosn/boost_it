<div class="web-container">
      <h2 class="text-center">Create your tip</h2>

      <%= simple_form_for(@tip) do |c| %> <!-- this is the action that tells the button submit where to -->
          <div class="form-inputs form">
          <%= c.input :category, collection: Tip::CATEGORIES %>
          <%= c.input :title %>
          <%= c.input :address %>
          <%= c.input :review %>
          List <br>
          <select name="lists" style="border-color: #CED4DA; background: white; width: 100%;">
            <option></option>
            <% @lists.each do |list| %>
              <option value="<%= list %>"><%= list.capitalize %></option>
            <% end %>
          </select>
           <%= c.input :photo_cache, as: :hidden %>
          <%= c.input :photo, input_html: { class: 'd-none', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ğŸ“· Upload a photo' %>
          <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>

          </div>
          <div class="form-actions d-flex justify-content-between align-items-center">
          <%= link_to "Cancel", lists_path, class: "mr-5 ml-3"  %>
          <%= c.button :submit,  "Save", class: "form-button" %>
          </div>
      <% end %>
</div>


