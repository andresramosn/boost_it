<div class="web-container">

 <div class="row justify-content-center">
    <div class="col-xs-12 col md-4">
      <h2 class="text-center">Name your List</h2>
      <%= simple_form_for(@list) do |c| %> <!-- this is the action that tells the button submit where to -->
        <div class="form-inputs col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form p-4">
          <%= c.input :name %>
         <!--  <div class="main-button"> -->
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to "Cancel", lists_path, class: "mr-5 ml-3"  %>
            <%= c.button :submit, "Save", class: "form-button" %>
          </div>
        </div>
          <% end %>
      </div>
    </div>
 <!--  </div> -->

 </div>



