<div class="settings">
  <%if user_signed_in? == true %>
    <li class="nav-item dropdown">
      <%= image_tag "settings.png", class: "settings dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%=  %>
        <% end %>
        </div>
    </li>
</div>

<div class="web-container">

  <br>
  <h1>Your Lists</h1>

  <p id="p-centered">Add new lists you can share with your guests</p>
    <div class="button-container">
      <%= link_to "New List", new_list_path, class:"add-button" %>
    </div>


  <%= link_to tips_path do%>
    <div class="card-container">
      <div class="list-card" style="background-image: url(https://source.unsplash.com/random?restaurant);">
         <h2>All Tips</h2>
        </div>
    </div>
  <% end %>

  <% @lists.each do |list| %>
    <%= link_to list_path(list.id) do%>
      <div class="card-container">
        <% if(list.tips.sample) %>
          <div class="list-card" style="background-image: url(<%= list.tips.last.photo %>);">
        <% else %>
          <div class="list-card">
        <% end %>
        <h2> <%= list.name %> </h2>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>

