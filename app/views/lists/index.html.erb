<div class="settings">
  <%if user_signed_in? == true %>
    <li class="nav-item dropdown">
      <%= image_tag "settings.png", class: "settings dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%=  %>
        <% end %>
        </div>
    </li>
</div>


<div class="web-container">

<br>
<h1>Your lists</h1>
<p id="p-centered">Add new lists you can share with your guests</p>
<div class="button-container" style="text-align: center; padding: inherit;">
<%= link_to "New List", new_list_path, class:"add-button" %>
</div>

<div class="list-card">
  <ul>
    <% current_user.tips.each do |tip| %>
    <li><%= tip.title%></li>
      <% end %>
      <% @lists.each do |list| %>
      <%= list.name %>
      <% list.tips.each do |tip| %>
    <li><%= tip.title%></li>
      <% end %>
    <li> <%= link_to "+add a tip", new_tip_path %> </li>
      <% end %>
  </ul>
</div>



</div>
